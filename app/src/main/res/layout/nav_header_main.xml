<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorWhite"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Light">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="214dp"
        android:layout_height="82dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/spacex_logo"
        app:srcCompat="@drawable/ic_spacex_logo_xonly" />

    <TextView
        android:id="@+id/nav_header_responsabil_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:text="By About Future" />

    <TextView
        android:id="@+id/nav_header_organizatie_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorBlack"
        android:alpha="0.5"
        android:text="about.future@gmail.com" />

</LinearLayout>