<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_main_content"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@color/colorBackgroundGrey">

    <ImageView
        android:id="@+id/widget_mission_patch"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/spacing"
        android:contentDescription="@string/mission_patch"
        android:scaleType="centerCrop"
        android:src="@drawable/default_patch_fh_small" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/spacing"
        android:layout_marginStart="@dimen/spacing"
        android:layout_toEndOf="@+id/widget_mission_patch"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_mission_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="2"
            android:text="SES-12"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/widget_launch_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:45, 4 August 2018"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/subtitle_text_size" />

        <TextView
            android:id="@+id/widget_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 days, 12 hours and 15 minutes"
            android:textColor="@color/colorX"
            android:textSize="@dimen/subtitle_text_size" />

    </LinearLayout>

</RelativeLayout>