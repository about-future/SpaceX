<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MissionDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_appbar_height"
        android:background="@android:color/transparent">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleTextAppearance="@style/Condensed.Small"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginBottom="@dimen/detail_title_bottom_margin"
            app:expandedTitleMarginStart="@dimen/detail_inner_horiz_margin"
            app:expandedTitleTextAppearance="@style/Condensed"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/rocket_image"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:src="@drawable/falcon9_block5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_grey" />

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:orientation="vertical">-->

                <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_gravity="top"-->
                    <!--android:background="@drawable/gradient_grey" />-->

                <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:layout_gravity="bottom"-->
                    <!--android:background="@color/colorBackgroundGrey"/>-->

            <!--</LinearLayout>-->

            <TextView
                android:id="@+id/customers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="17dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:text="@string/label_mission_name" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="@dimen/spacing"
                app:elevation="4dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/detail_inner_horiz_margin"
            android:layout_marginStart="@dimen/detail_inner_horiz_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detail_body_top_margin"
                android:orientation="horizontal">

                <ImageView
                    android:contentDescription="@string/mission_patch"
                    android:id="@+id/mission_patch_large"
                    android:layout_width="@dimen/dimen_patch_size"
                    android:layout_height="@dimen/dimen_patch_size"
                    android:scaleType="centerCrop"
                    android:layout_gravity="top"
                    tools:src="@drawable/mission_patch" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing"
                    android:layout_marginEnd="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rocket_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/colorWhite"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/detail_small_title_text_size"
                        tools:text="Falcon 9 - Block 4" />

                    <TextView
                        android:id="@+id/rocket_type_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/detail_body_text_size"
                        android:text="@string/label_rocket_type" />

                    <TextView
                        android:id="@+id/launch_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/colorWhite"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginTop="@dimen/spacing"
                        android:textSize="@dimen/detail_small_title_text_size"
                        tools:text="3:12 PM, 20 Jul 2018" />

                    <TextView
                        android:id="@+id/launch_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/detail_body_text_size"
                        android:text="@string/label_launch_date" />

                    <TextView
                        android:id="@+id/launch_site_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginTop="@dimen/spacing"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/detail_small_title_text_size"
                        tools:text="CCAFS SLC 40" />

                    <TextView
                        android:id="@+id/launch_site_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/detail_body_text_size"
                        android:text="@string/label_launch_site" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detail_body_top_margin"
                android:orientation="vertical">



                <!--&lt;!&ndash;<TextView&ndash;&gt;-->
                    <!--&lt;!&ndash;android:id="@+id/launch_site_name_long"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:layout_width="wrap_content"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:layout_height="wrap_content"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:layout_marginBottom="@dimen/spacing"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:ellipsize="end"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:maxLines="2"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:textColor="@color/colorAccent"&ndash;&gt;-->
                    <!--&lt;!&ndash;android:textSize="@dimen/detail_body_text_size"&ndash;&gt;-->
                    <!--&lt;!&ndash;tools:text="Cape Canaveral Air Force Station Space Launch Complex 40" />&ndash;&gt;-->

                <TextView
                    android:id="@+id/mission_details"
                    style="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="@dimen/detail_body_text_size"
                    tools:text="This is a sample text meant to test the app and the layout for design awesomeness." />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/webcast_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detail_body_top_margin"
                android:orientation="vertical">

                <View
                    android:id="@+id/separation_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLine" />

                <TextView
                    android:id="@+id/launch_webcast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/spacing"
                    android:textSize="20sp"
                    android:text="@string/label_webcast" />

                <ImageView
                    android:layout_marginTop="@dimen/spacing"
                    android:id="@+id/webcast_preview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/details_video_height"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/mission_webcast"
                    tools:src="@drawable/video"/>

            </LinearLayout>

            <View
                android:id="@+id/separation_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing"
                android:background="@color/colorLine" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing"
                android:background="@color/colorTransparent" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <!--<android.support.design.widget.FloatingActionButton-->
