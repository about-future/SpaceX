<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MissionDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_appbar_height"
        android:background="@android:color/transparent">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleTextAppearance="@style/Condensed.Small"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginBottom="@dimen/detail_title_bottom_margin"
            app:expandedTitleMarginStart="@dimen/detail_inner_horiz_margin"
            app:expandedTitleTextAppearance="@style/Condensed"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/rocket_image"
                android:scaleType="centerCrop"
                android:layout_gravity="top"
                android:gravity="top"
                app:layout_collapseMode="parallax"
                tools:src="@drawable/falconheavy2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:padding="@dimen/spacing">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/detail_title_view_size"
                    android:paddingBottom="@dimen/detail_metabar_title_bottom_padding" />

                <TextView
                    android:id="@+id/article_byline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="1dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/detail_body_text_size"
                    android:textColor="@color/colorCardLaunchTime"
                    android:text="@string/label_mission_name" />

            </LinearLayout>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="200dp"-->
                <!--android:layout_gravity="bottom"-->
                <!--android:background="@drawable/gradient_grey" />-->

            <!--<TextView-->
                <!--android:id="@+id/customers"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="bottom"-->
                <!--android:layout_marginStart="17dp"-->
                <!--android:fontFamily="sans-serif-condensed"-->
                <!--android:text="15:45 PM, 6 Feb 2018"-->
                <!--android:textColor="@color/colorAccent"-->
                <!--android:layout_marginBottom="@dimen/spacing"-->
                <!--android:textSize="@dimen/detail_body_text_size" />-->

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="@dimen/spacing"
                app:elevation="4dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/detail_inner_horiz_margin"
            android:layout_marginStart="@dimen/detail_inner_horiz_margin"
            android:layout_marginTop="@dimen/spacing"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mission_patch_large"
                    android:layout_width="@dimen/details_patch_size"
                    android:layout_height="@dimen/details_patch_size"
                    android:layout_gravity="top"
                    android:contentDescription="@string/mission_patch"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/dragon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="@dimen/spacing"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rocket_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-condensed"
                        android:maxLines="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/detail_small_title_text_size"
                        tools:text="Falcon 9 - Block 4" />

                    <TextView
                        android:id="@+id/rocket_type_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/label_rocket_type"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/detail_body_text_size" />

                    <TextView
                        android:id="@+id/launch_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-condensed"
                        android:maxLines="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/detail_small_title_text_size"
                        tools:text="3:12 PM, 20 Jul 2018" />

                    <TextView
                        android:id="@+id/launch_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/label_launch_date"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/detail_body_text_size" />

                    <TextView
                        android:id="@+id/launch_site_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/detail_small_title_text_size"
                        tools:text="CCAFS SLC 40" />

                    <TextView
                        android:id="@+id/launch_site_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="@string/label_launch_site"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/detail_body_text_size" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/mission_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detail_body_top_margin"
                android:fontFamily="sans-serif-condensed"
                android:textColorLink="@color/colorAccent"
                android:textSize="@dimen/detail_body_text_size"
                tools:text="This is a sample text meant to test the app and the layout for design awesomeness." />

            <LinearLayout
                android:id="@+id/webcast_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detail_body_top_margin"
                android:orientation="vertical">

                <View
                    android:id="@+id/separation_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLine" />

                <TextView
                    android:id="@+id/launch_webcast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/label_webcast"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/details_video_height">

                    <ImageView
                        android:id="@+id/webcast_preview"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/details_video_height"
                        android:layout_marginTop="@dimen/spacing"
                        android:contentDescription="@string/mission_webcast"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent"
                        tools:src="@drawable/video" />

                    <ImageView
                        android:id="@+id/webcast_play"
                        android:layout_width="@dimen/details_play_icon"
                        android:layout_height="@dimen/details_play_icon"
                        android:contentDescription="@string/video_play"
                        android:visibility="visible"
                        app:layout_constraintBottom_toTopOf="@id/webcast_preview"
                        app:layout_constraintEnd_toStartOf="@id/webcast_preview"
                        app:layout_constraintStart_toEndOf="@id/webcast_preview"
                        app:layout_constraintTop_toBottomOf="@id/webcast_preview"
                        app:srcCompat="@drawable/ic_play" />

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rocket_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detail_body_top_margin"
                android:orientation="vertical">

                <View
                    android:id="@+id/separation_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLine" />

                <TextView
                    android:id="@+id/rocket_details_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/label_rocket_details"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/core_serial_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Core Serial:"/>

                    <TextView
                        android:id="@+id/core_serial"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing"
                        tools:text="Core Serial"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/separation_line99"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing"
                android:background="@color/colorLine" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing"
                android:layout_marginTop="@dimen/spacing"
                android:background="@color/colorTransparent" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>