<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBar.Solid.SpaceX.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/logo</item>
    </style>

    <style name="AppTheme.Logo" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.SpaceX.NoTitle</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.SpaceX.NoTitle</item>
    </style>

    <!-- NoActionBar Style -->
    <style name="AppTheme.FullScreen" parent="@style/Theme.AppCompat">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Condensed">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:windowTitleSize">@dimen/detail_title_text_size</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Condensed.Small">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:windowTitleSize">@dimen/detail_small_title_text_size</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="RocketDetails">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/detail_body_text_size</item>
    </style>

    <style name="RocketDetails.Values" parent="RocketDetails">
        <item name="android:layout_marginStart">128dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
