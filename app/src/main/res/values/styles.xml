<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!-- FullScreen Style -->
    <style name="AppTheme.FullScreen" parent="@style/Theme.AppCompat">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- NoActionBar Style -->
    <style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Activity Big Title Style -->
    <style name="Condensed">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:windowTitleSize">@dimen/details_title_text_size</item>
        <item name="android:textColor">#fff</item>
    </style>

    <!-- Activity Small Title Style -->
    <style name="Condensed.Small">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:windowTitleSize">@dimen/details_small_title_text_size</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TextView Styles -->
    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/details_small_title_text_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Subtitle" parent="Title">
        <item name="android:textSize">@dimen/details_body_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MissionDetails">
        <item name="android:layout_width">@dimen/mission_details_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/details_body_text_size</item>
    </style>

    <style name="RocketDetails" parent="MissionDetails">
        <item name="android:layout_width">@dimen/rocket_details_width</item>
    </style>

    <style name="MissionDetails.Values" parent="MissionDetails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="RocketDetails.Values" parent="RocketDetails">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MissionDetailsDetails.Values.Acronyms" parent="MissionDetails.Values">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="RocketDetails.Values.Acronyms" parent="RocketDetails.Values">
<!--        <item name="android:layout_width">match_parent</item>-->
        <item name="android:textColor">@color/colorAccent</item>
        <!--<item name="android:textSize">13sp</item>-->
    </style>

    <style name="PreferenceLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PreferenceLabel.Hint" parent="PreferenceLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">0.7</item>
    </style>

</resources>
