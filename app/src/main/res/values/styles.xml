<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBar.Solid.SpaceX.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/logo</item>
    </style>

    <style name="AppTheme.Logo" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.SpaceX.NoTitle</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.SpaceX.NoTitle</item>
    </style>

    <!-- NoActionBar Style -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
